<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/barButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/gray"
        android:text="Condition Texts here" />

    <WebView
        android:id="@+id/webview"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/barButton"/>

    <Button
        android:id="@+id/testAlertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webview"
        android:text="Test Notification Alert"/>
    <Button
        android:id="@+id/testMapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testAlertButton"
        android:text="Test Map Button"/>

</RelativeLayout>